SLEN: SLEN { // switch language EN
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_tap &to QWE>
        , <&macro_tap &kp LS(LA(LC(I)))>
        ;
};

SYMRU: SYMRU {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
    = <&macro_press &mo QWE>  
    , <&macro_tap &kp LS(LA(LC(I)))>
    , <&macro_press &mo SYM>
    , <&macro_pause_for_release>
    , <&macro_release &mo SYM>
    , <&macro_tap &kp LS(LA(LC(Y)))>
    , <&macro_release &mo QWE>
    ;
};