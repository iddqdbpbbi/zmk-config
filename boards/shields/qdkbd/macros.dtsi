#define str(s) #s
#define MACRO(NAME, BINDINGS, WAITMS, TAPMS) \
  macro_##NAME: macro_##NAME { \
      compatible = "zmk,behavior-macro"; \
      label = str(macro_##NAME); \
      #binding-cells = <0>; \
      wait-ms = <WAITMS>; \
      tap-ms = <TAPMS>; \
      bindings = <BINDINGS>; \
  };

MACRO(nav, &macro_tap &kp K_CANCEL \
           &macro_tap &kp LS(LA(LC(I))) \
           &macro_press &mo NAV \
           &macro_pause_for_release \
           &macro_release &mo NAV \
           &macro_tap &kp LS(LA(LC(Y))) \
           ,0, 0)

SLEN: SLEN { // switch language EN
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_tap &to QWE>
        , <&macro_tap &kp LS(LA(LC(I)))>
        ;
};

SLRU: SLRU {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_tap &to RUQ>
        , <&macro_tap &kp LS(LA(LC(Y)))>
        ;
};

SYMRU: SYMRU {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
    = <&macro_tap &kp LS(LA(LC(I)))>
    , <&macro_press &mo SYM>
    , <&macro_pause_for_release>
    , <&macro_release &mo SYM>
    , <&macro_tap &kp LS(LA(LC(Y)))>
    ;
};
