SLRU: SLRU { // switch language RU
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_tap &to RUQ>
        , <&macro_tap &kp LS(LA(LC(Y)))>
        ;
};

TO_NAV: TO_NAV {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        =  <&macro_tap &kp LS(LA(LC(I)))>
        , <&macro_press &mo QWE>
        , <&macro_press &mo NAV>
        , <&macro_pause_for_release>
        , <&macro_release &mo NAV>
        , <&macro_tap &kp LS(LA(LC(Y)))>
        , <&macro_release &mo QWE>
        ;
};
